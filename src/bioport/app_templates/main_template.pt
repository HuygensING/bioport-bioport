<metal:block define-macro="master">
  <metal:block define-slot="doctype">
		<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
  </metal:block> 

<html xmlns="http://www.w3.org/1999/xhtml" lang="en" xml:lang="en">

<head>
    <title metal:define-slot="head_title" tal:content="string:Het Biografisch Portaal van Nederland" />
    <meta content="text/html; charset=UTF-8" http-equiv="Content-Type" />
    <meta metal:define-slot="description" name="Description" content="Het Biografisch Portaal van Nederland" />
    <meta metal:define-slot="keywords" name="Keywords" content="biografie portaal biografieën Nederland" />
    

    <link tal:attributes="href static/css/reset.css" rel="stylesheet" type="text/css" />
    <link tal:attributes="href static/css/layout.css" rel="stylesheet" media="screen" type="text/css" />
    <link tal:attributes="href static/css/contents.css" rel="stylesheet" type="text/css" />
    <link tal:attributes="href static/css/print.css" rel="stylesheet" media="print" type="text/css" />
    <link tal:attributes="href static/css/photoframe.css" rel="stylesheet" media="screen" type="text/css" />

    <script tal:attributes="src static/js/jquery-1.4.1.min.js" type="text/javascript"></script>
    <script tal:attributes="src static/js/utils.js" type="text/javascript"></script>
    <script tal:attributes="src static/js/photoframe.js" type="text/javascript"></script>

    <script tal:attributes="src static/js/scripts.js" type="text/javascript"></script>
<link tal:attributes="href static/images/favicon.ico" rel="shortcut icon"> 

    <!--[if IE 6]>
    <![endif]-->
    
<div metal:define-slot="extra_header_content" />
</head>

<body tal:attributes="id python:view.url().split('/')[-1].capitalize()" >
    <div id="wrapper">
        <div id="layHead">
            <h2><span class="textOnly">Het Biografisch Portaal van Nederland</span></h2>
            <div id="stats">
                <span tal:replace="python:view.count_persons()" /> personen<br/>
                van 634 tot 2005
                <br/>
                in <span tal:replace="python: view.count_biographies()" /> biografieën
            </div>
            <hr class="textOnly"/>
        </div>
        
        <div id="layMenu">
            <h3 class="textOnly">Inhoud</h3>
            <ul>
                <li tal:repeat="item python:view.menu_items()">
                    <a tal:attributes="href python:item[0]" tal:content="python:item[1]"></a>
                </li>
	        </ul>
	        <form class="search_form" tal:condition="python:view.__name__ != 'index'" 
	           tal:attributes="action python:view.url('personen')">
	           <input type="text" name="search_name" size="20">
	           <input type="submit" value="zoek">
	        </form>
        <hr class="textOnly"/>
        </div>
        
        <div id="layContent">
            
            <!-- content goes here ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
	        <div metal:define-slot="content">
		        body content goes here
	        </div>
            <!-- content end ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
            
        </div>
        
        <div id="layFoot">
        
            <hr class="textOnly"/>
            <span tal:omit-tag="" tal:repeat="item python:view.menu_items()">
            
                <span tal:omit-tag="" tal:condition="python:not repeat['item'].start">|</span>
                <a tal:attributes="href python:item[0]" tal:content="python:item[1]"></a> 
            </span>

        </div>

    </div>

</body>

</html>
</metal:block>
