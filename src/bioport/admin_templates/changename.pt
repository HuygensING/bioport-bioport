<html metal:use-macro="context/@@admin_template/macros/master">
<div metal:fill-slot="content" >
<h1>Verander naam</h1>
<ul>
	<li>Naam: <span tal:replace="python:view.naam.volledige_naam()" />
	<li>"Sorteernaam": <span tal:replace="python:view.naam.guess_normal_form()" />
</ul>
<table>    
    <tr> 
        <th>preposities</th>
        <td>
       		<input type="text"
       			name="prepositie"
       			tal:attributes="value python:view.naam.prepositie()"
       			/> 
        </td>
    </tr>
    <tr> 
        <th>voornamen</th>
        <td>
       		<input type="text"
       			name="voornaam"
       			tal:attributes="value python:view.naam.voornaam()"
       			/> 
        </td>
    </tr>
    <tr> 
        <th>intra-posities</th>
        <td>
       		<input type="text"
       			name="intrapositie"
       			tal:attributes="value python:view.naam.intrapositie()"
       			/> 
        </td>
    </tr>
    <tr> 
        <th>geslachtsnaam</th>
        <td>
       		<input type="text"
       			name="geslachtsnaam"
       			tal:attributes="value python:view.naam.geslachtsnaam()"
       			/> 
        </td>
    </tr>
    <tr> 
        <th>postposities</th>
        <td>
       		<input type="text"
       			name="prepositie"
       			tal:attributes="value python:view.naam.prepositie()"
       			/> 
        </td>
    </tr>
    <tr>
    	<th>volledige naam</th>
    	<td>
       		<input type="text"
       			name="volledigenaam"
       			tal:attributes="value python:view.naam.volledige_naam()"
       			/> 
    	
    	</td>
    </tr>
    <tr>
   		<th></th>
   		<td> 
	        <span tal:replace="structure python:view.actions.byname['form.actions.save_changes'].render()" >
	    	</span>
	    </td>
	 </tr>
	 
    </table>
    <tt tal:content="python:dir(view.naam)" />
</div>
</html>
